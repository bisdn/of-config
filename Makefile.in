PKGNAME = @PROJECTNAME@
TARGET = @PROJECTNAME@.la

# Various configurable paths (remember to edit Makefile.in, not Makefile)
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@
libtool = @libtool@
top_builddir = @top_builddir@

CC = @CC@
CXX = @CXX@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
LIBS = @LIBS@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
LIBTOOL = @LIBTOOL@
LTCOMPILE = $(LIBTOOL) --tag=CC --quiet
LTCXXCOMPILE = $(LIBTOOL) --tag=CXX --quiet

xdpd_xmp_client_CFLAGS = @xdpd_xmp_client_CFLAGS@
xdpd_xmp_client_LIBS = @xdpd_xmp_client_LIBS@

SRCS = @PROJECTNAME@.c xml_helper.c list.c cxmpclient_wrapper.cc cxmp_blocking_client_adapter.cc
OBJDIR = .obj
LOBJS = $(SRCS:%.c=$(OBJDIR)/%.c.lo)
LCXXOBJS = $(SRCS:%.cc=$(OBJDIR)/%.cc.lo)

all: $(TARGET)

$(TARGET): $(LOBJS) $(LCXXOBJS)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) $(xdpd_xmp_client_CFLAGS) $(CPPFLAGS) $(LIBS) $(xdpd_xmp_client_LIBS) -avoid-version -module -shared -export-dynamic --mode=link -o $@ $^ -rpath $(libdir)

$(OBJDIR)/%.c.lo: %.c
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(LTCOMPILE) --mode=compile $(CC) $(CFLAGS) $(CPPFLAGS) -fPIC -shared -c $< -o $@

$(OBJDIR)/%.cc.lo: %.cc
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(LTCXXCOMPILE) --mode=compile $(CXX) $(CFLAGS) $(CPPFLAGS) -fPIC -shared -c $< -o $@

.PHONY: install
install: $(TARGET)
	$(INSTALL) -m 775 -d $(DESTDIR)/$(libdir)
	$(LIBTOOL) --mode=install cp $(TARGET) $(DESTDIR)/$(libdir)/;

.PHONY: clean
clean:
	echo $(LIBTOOL) --mode clean rm -f $(LOBJS)
	echo $(LIBTOOL) --mode clean rm -f $(LCXXOBJS)
	echo $(LIBTOOL) --mode clean rm -f $(TARGET)
	rm -rf $(TARGET) $(OBJDIR)

